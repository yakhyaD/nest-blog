<div class="container mt-2">
    <h2 class="text-center my-2">Register</h2>
    <form action="/auth/login" method="POST" class="d-flex flex-column justify-center align-center w-50 mt-2 mx-auto">
        <div class="form-group">
            <label for="title">Full Name:</label>
            <input class="form-control" type="email" id="title" name="name" placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="title">Email:</label>
            <input class="form-control" type="email" id="title" name="email">
        </div>
        <div class="form-group">
            <label for="title">Password:</label>
            <input type="password" name="password" class="form-control"></input>
        </div>
        <div class="d-flex">
            <input class="btn btn-primary  my-2 mx-auto" type="submit" value="Login" class="btn">
        </div>
        <span class="mt-2">
            Already have a account ?
            <a href="/auth/login" class="text-primary"> Log in here</a>
        </span>
    </form>
</div>
