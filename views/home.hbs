<h1>Articles</h1>
{{#each posts as |post| }}
    <div class="row my-4">
        <div class="card">
            <div class="card-header">
                {{post.user.name}}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p class="card-text">{{post.body}}</p>
                <div class="d-flex">
                    <a href="/posts/{{post.id}}" class="btn btn-primary mr-4">Read more</a>
                    {{#if post.show }}
                    <form action="/posts/{{post.id}}?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-danger" value="Delete"/>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{else}}
    <p>No posts yet.</p>
{{/each}}
